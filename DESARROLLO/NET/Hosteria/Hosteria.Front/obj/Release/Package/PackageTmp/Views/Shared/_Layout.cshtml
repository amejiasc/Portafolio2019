<body>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="index.html"><img src="~/images/Recurso 1.png" alt="" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item @((NombreView.Count()==5) ? "active": "")"><a href="@Url.Action("Index", "Home")" class="nav-link">Home</a></li>
                    <li class="nav-item @(NombreView.Contains("Services") ? "active": "")"><a href="@Url.Action("Services", "Home")" class="nav-link">Nuestros Servicios</a></li>
                    <li class="nav-item @(NombreView.Contains("About") ? "active": "")"><a href="@Url.Action("About", "Home")" class="nav-link">Quienes Somos</a></li>
                    <li class="nav-item @(NombreView.Contains("Contact") ? "active": "")"><a href="@Url.Action("Contact", "Home")" class="nav-link">Contacto</a></li>
                    <li class="nav-item"><a href="@Url.Action("Login", "Sistema")"class="nav-link"><i class="icon-account_circle"></i> Acceso Clientes</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->
    @RenderBody()

    <footer class="footer">
        <div class="container">
